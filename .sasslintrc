{
  "options": {
    "merge-default-rules": false,
    "formatter": "stylish",
    "max-warnings": 50
  },
  "files": {
    "include": "**/*.s+(a|c)ss",
    "ignore": ["node_modules/**/*.s+(a|c)ss"]
  },
  "rules": {
    "bem-depth": 2,
    "extends-before-declarations": 2,
    "extends-before-mixins": 2,
    "hex-notation": 2,
    "indentation": [
      2,
      {
        "size": 4
      }
    ],
    "leading-zero": [
      2,
      {
        "include": true
      }
    ],
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint","mq"
        ]
      }
    ],
    "no-color-keywords": 2,
    "no-color-literals": 2,
    "no-css-comments": 2,
    "no-debug": 1,
    "no-disallowed-properties": [
      2,
      {
        "properties": [
          "background",
          "font"
        ]
      }
    ],
    "no-duplicate-properties": 2,
    "no-extends": 2,
    "no-ids": 2,
    "no-important": 2,
    "no-trailing-whitespace": 2,
    "no-warn": 1,
    "placeholder-in-extend": 2,
    "space-after-colon": 2,
    "space-after-comma": 2,
    "variable-for-property": [
      2,
      {
        "properties": [
          "font-family",
          "z-index"
        ]
      }
    ],
    "zero-unit": 2
  }
}
